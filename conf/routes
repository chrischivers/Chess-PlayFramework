# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /socket/:gameID             controllers.Application.openSocket(gameID:String)
GET     /game/:gameID               controllers.Application.loadGame(gameID:String)
POST    /game/:gameID/move          controllers.Application.processMove(gameID:String)
GET     /board/:gameID              controllers.Application.getBoard(gameID:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
