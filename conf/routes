# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /socket                     controllers.Application.socket
GET     /game                       controllers.Application.loadGame(gameId:Option[String])
GET     /move/:gameID/:from/:to     controllers.Application.processMove(gameID:String, from:String, to:String)
GET     /board/:gameID              controllers.Application.getBoard(gameID:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
